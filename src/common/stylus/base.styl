body, html
  line-height: 1
  font-weight: 200
  font-family: 'PingFang SC','STHeitiSC-Light'

.clearfix
  display:inline-block
  &::after
    display: block
    content: "."
    height: 0
    line-height:0
    clear: both

@media (-webkit-min-device-pixel-ratio: 1.5),(min-device-pixel-ratio: 1.5)
  .border-1px
    &::after
      -webkit-transform scaleY(0.7)
      transform scaleY(0.7)

@media (-webkit-min-device-pixel-ratio: 2),(min-device-pixel-ratio: 2)
  .border-1px
    &::after
      -webkit-transform scaleY(0.5)
      transform scaleY(0.5)

.parting-line
  position: relative
  margin-top: 28px
  line-height: 14px
  font-size: 14px
  font-weight: 700
  color: #fff
  text-align: center
  &::after
    position: absolute
    width: 36%
    height: 2px
    top: 6px
    right: 0
    background-color: rgba(255,255,255,.2)
    content: ""
  &::before
    position: absolute
    width: 36%
    height: 2px
    top: 6px
    left: 0
    background-color: rgba(255,255,255,.2)
    content: ""

.disNone
  display: none
